<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.kit.pse17.go_app">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.login.FirebaseSignInHelper"/>
        <activity android:name=".view.GroupListActivity" />
        <activity android:name=".controller.login.GoSignInHelper" />
        <activity android:name=".view.GroupDetailActivity" />
        <activity android:name=".view.GoDetailActivity" />
        <activity android:name=".view.SettingsActivity" />

        <uses-permission android:name="android.permission.INTERNET" />

        <service android:name=".serverCommunication.downstream.TokenService">

            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"></action>
            </intent-filter>

        </service>

        <service android:name=".serverCommunication.downstream.MessagingService" >

            <intent-filter>
                <action android:name="com.google.firebase.MESSAGE_EVENT"></action>
            </intent-filter>

        </service>
    </application>

</manifest>