<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="edu.kit.pse17.go_app.PersistenceLayer.GroupEntity" table="groups">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="ID" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="java.lang.String" length="50"/>
        <property name="description" column="description" type="java.lang.String" length="140"/>
        <set name="admins" cascade="save-update" table="ADMINS" lazy="extra">
            <key column="id"/>
            <many-to-many column="uid" class="edu.kit.pse17.go_app.PersistenceLayer.UserEntity" fetch="join"/>
        </set>
        <set name="requests" cascade="save-update" table="REQUESTS" lazy="extra" inverse="false">
            <key column="id"/>
            <many-to-many column="uid" class="edu.kit.pse17.go_app.PersistenceLayer.UserEntity" fetch="select"/>
        </set>
        <set name="members" cascade="save-update" table="MEMBERS" lazy="extra" inverse="false">
            <key column="id"/>
            <many-to-many column="uid" class="edu.kit.pse17.go_app.PersistenceLayer.UserEntity"/>
        </set>
        <set name="gos" cascade="save-update">
            <key column="ID"/>
            <one-to-many class="edu.kit.pse17.go_app.PersistenceLayer.GoEntity"/>
        </set>
    </class>
</hibernate-mapping>